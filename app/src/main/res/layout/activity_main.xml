<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


	<RadioGroup
		android:id="@+id/radio_receiver_app"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:focusable="true"
		android:focusableInTouchMode="true">

		<RadioButton
			android:id="@+id/radio_default"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Styled Media Receiver"/>

		<RadioButton
			android:id="@+id/radio_custom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Custom Receiver"/>

	</RadioGroup>

	<android.support.v7.app.MediaRouteButton
		android:id="@+id/media_route_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:mediaRouteTypes="user"
		android:padding="10dp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/button_start_track1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Track 1"/>

			<Button
				android:id="@+id/button_start_track2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Track 2"/>

			<Button
				android:id="@+id/button_start_track3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Track 3"/>

		</LinearLayout>

		<Button
			android:id="@+id/button_send_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Send Message"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="  Player Position :: "/>

			<TextView
				android:id="@+id/lbl_pos"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="30"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=" / "/>

			<TextView
				android:id="@+id/lbl_dur"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="30"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/button_seek_to_start"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Seek to 0"/>

			<Button
				android:id="@+id/button_seek_to_mid"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Seek to 15"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/button_pause"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Pause"/>

			<Button
				android:id="@+id/button_play"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Play"/>

			<Button
				android:id="@+id/button_stop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Stop"/>

		</LinearLayout>

</LinearLayout>
